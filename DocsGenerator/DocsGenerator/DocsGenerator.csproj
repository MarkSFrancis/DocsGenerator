<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="CustomTemplate\**" />
    <Compile Remove="templates\custom\bower_components\**" />
    <Compile Remove="templates\custom\node_modules\**" />
    <Compile Remove="_site\**" />
    <EmbeddedResource Remove="CustomTemplate\**" />
    <EmbeddedResource Remove="templates\custom\bower_components\**" />
    <EmbeddedResource Remove="templates\custom\node_modules\**" />
    <EmbeddedResource Remove="_site\**" />
    <None Remove="CustomTemplate\**" />
    <None Remove="templates\custom\bower_components\**" />
    <None Remove="templates\custom\node_modules\**" />
    <None Remove="_site\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="docfx.console" Version="2.38.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="images\" />
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="rmdir /s /q $(ProjectDir)_site" />
  </Target>

</Project>
